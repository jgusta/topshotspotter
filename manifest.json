{
  "name": "Top Shot Spotter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This give you info",
  "homepage_url": "https://www.cloudgaffle.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Get Info",
    "default_popup": "src/browser_action/stats.html"
  },
  "permissions": [
    "activeTab",
    "https://www.nbatopshot.com/listings/p2p/*"
  ]
}